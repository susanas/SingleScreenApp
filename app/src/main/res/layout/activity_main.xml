<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/blurb"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Does your dog love kids? ... \n\t\t\t   ... Does your kid love dogs? \n\t\t\t\t\t  ...Not sure if you can have them both? \n\t\t\t\t\t\t\t\t\t\tWant to give it a try? \n\t\t\tLet us help you find a match for a safe \&amp; fun\n\t\t\t\t\t\t\t\t\t\t\t\tplay date to find out!!"
        android:fontFamily="sans-serif"
        android:textColor="#00695c"
        android:textSize="16sp"
        android:textStyle="italic"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/drawable" />

    <ImageView
        android:id="@+id/drawable"
        android:src="@drawable/kidsandk9s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/KaK" />

    <TextView
        android:id="@+id/KaK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kids \&amp; K9s\t\t\t\t"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:paddingTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/adr" />

    <TextView
        android:id="@+id/adr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1212 W. Main Avenue\nLos Angeles, CA 90012\n(213) 555-1212\nhello@kak9s.com\nwww.kak9s.com\nMonday -Friday 9am-5pm"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</android.support.constraint.ConstraintLayout>